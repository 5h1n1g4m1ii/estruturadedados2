//exerc. 351

import java.util.Scanner;

public class MyClass {
    public static void main(String args[]) {
        Scanner ler = new Scanner(System.in);
      
      int L, num;
      String nomes[5];
      
       for(L = O; L <= 4 ; L++){
           
              System.out.println("\nnome " + L + 1 +": "+ ler nomes[L]);
           
           System.out.println("Digite o numero da pessoa: ");
		num = ler.nextInt();
		 
		 while((num < 1 || num > 5){
		     
		     System.out.println(" \n Numero fora do intervalo";);
		     
		     System.out.println("Digite o numero da pessoa: ");
		     num = ler.nextInt()
		 }
		 
		    System.out.println("\n"+ nomes[ num -1]);
       }
        
    }
    
}
  
    

//exerc. 356

import java.util.Scanner;

public class MyClass {
    public static void main(String args[]) {
     
     Scanner ler = new Scanner(System.in);
        
int L ,c ,t, media[15];
String nomes[ 15] sit[15];
double pr1[15], pr2[15];

for( L= O; L <= 14 ; L++)
{
System.out.println("\n\nDigite ", L + 1, " nome:");
nomes = ler.nextString(L);
while( strtam(nomes[L]) >30)
{ System.out.println( "\nNomes com ate 30 caracteres");
System.out.println( "\n\nDigite ", L + 1 9" nome:");
nomes = ler.nextString(L);
}

t=30-strtam (nomes[L]);
for(c=1; c <= t; c++)
{nomes[L]=strconcat(nomes[L]+ "");}
System.out.println( "\ndigite 1 nota:");
prl = ler.nextString(L);
System.out.println("\ndigite 2 nota:");
pr2 = ler.nextString(L);
media[L] = realint((prl[L]+pr2[L])12+0.0001);
if(media[L] >= 5 )
{ sit[L  = "AP"; }
else
{ sit[L] = "RP"; }
}

System.out.println( "\n\n\n\t\t\t\tRELACAO FINAL\n";
for( L= 0; L <= 14 ; L++)
{ System.out.println("\n"L+1="-"+nomes[L]+"\t"+prl[L]+"\t"+pr2[L]"\t"+niedia[L]+"\t"+sit[L]); }

System.out.println("\n");
        
    }
 
                
}
           

