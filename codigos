import java.util.Scanner;

public class MyClass {
    public static void main(String args[]) {
     
     Scanner ler = new Scanner(System.in);
     
     String frase;
     int op, x, tam; 
     
   do{
       System.out.println("Menu:");
       System.out.println("\nl - Imprime o comprimento da frase ");
       System.out.println("\n2 - Imprime os dois primeiros e os dois ultimos caracteresa frase");
       System.out.println("\n3 - Imprime a frase espelhada");
       System.out.println("\n4 - Termina o algoritmo ");
       System.out.println("\nOPCAO: ");
       op = ler.nextInt();
       
       if (op == 1) {
           
             System.out.println("\nDigite uma frase:");
             frase = ler.nextString();
             
             System.out.println("\nnumero de caracteres da frase: " + strtam(frase));
       } else {
           
           if (op == 2){
               
               System.out.println("\nDigite uma frase:");
               frase = ler.nextString();
               System.out.println("\nos dois primeiros caracteres: " + strnprim(frase+2));
               tam = strtam(frase) - 2;
               System.out.println("\nos dois ultimos caracteres: " + strnresto(frase+tam));}
               
           } else {
               if (op == 3){
                   
                System.out.println("\nDigite uma frase:");
                frase = ler.nextString();
                for (x = strtam(frase) -1; x >=O; x—){
                    System.out.println(strelem(frase+x));}
                }
               
           }
                else {
                    if(op == 4) {
                        System.out.println("\nFim do algoritmo");
                    } else {
                        System.out.println( "\nopcao nao disponivel");}
                    }
                
                    System.out.println( "\n\n");
       
   } while (op < > 4)
     System.out.println( "\n\n");
   
        
    }
