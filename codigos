totiucromenorlø = 0;
totlucromenor20 = 0;
totlucromaior20 = 0;

for(A = 0; A <>100; A++)
{ System.out.println(" \nPreco de compra:"); 
precoconipra = ler.nextString[A];
System.out.println("\nPreco de venda: "); 
precovenda = ler.nextString[A];
}
for(A=0;A < 100;A++)
{
lucro = precovenda[A] - precocompra[A]
if(l ucro<10.0)
{totl ucromenorlø+i-; }
else
{ if(lucro <= 20.0)
{ totlucronienor20++; }
else
{ totlucromaior20++; }
}
}
System.out.println("\ntotal de mercadorias com lucro < 10%: "+totlucromenor10); 
